{
	"name": "bolts-wp",
	"version": "0.2.0",
	"description": "",
	"main": "index.php",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev webpack --mode development --config config/bundling/webpack.config.js",
		"prod": "cross-env NODE_ENV=prod webpack --mode production --config config/bundling/webpack.config.js",
		"watch": "yarn run dev --watch",
		"serve": "cross-env SERVE=true yarn run watch && webpack-dev-server --progress --colors",
		"test": "jest --config config/testing/jest.config.js",
		"test:watch": "jest --watchAll --config config/testing/jest.config.js",
		"coverage": "jest --coverage --colors --config config/testing/jest.config.js",
		"bolts-add:react": "yarn add react@16 react-dom@16 && yarn add --dev @babel/preset-react enzyme enzyme-adapter-react-16 && mkdirp src/js/react src/sass/react",
		"bolts-remove:react:keep-files": "yarn remove react react-dom @babel/preset-react enzyme enzyme-adapter-react-16",
		"bolts-remove:react": "yarn run bolts-remove:react:keep-files && rimraf src/js/react src/sass/react"
	},
	"author": "Pocketsize",
	"license": "MIT",
