{
	"name": "bolts-wp",
	"version": "0.2.0",
	"description": "",
	"main": "index.php",
	"scripts": {
		"dev": "cross-env ENV=dev webpack --config config/bundling/webpack.config.js --mode development",
		"prod": "cross-env ENV=prod webpack --config config/bundling/webpack.config.js --mode production",
		"watch": "yarn run dev --watch",
		"serve": "cross-env SERVE=true yarn run watch && webpack-dev-server --progress --colors",
		"fix-scripts": "prettier-eslint --write 'src/js/**/*.{js,jsx}'",
		"fix-styles": "prettier-stylelint --write --quiet 'src/sass/**/*.scss'",
		"fix-codebase": "yarn run fix-styles && yarn run fix-scripts",
		"test": "jest --config config/testing/jest.config.js",
		"test:watch": "jest --watchAll --config config/testing/jest.config.js",
		"coverage": "jest --coverage --colors --config config/testing/jest.config.js",
		"bolts-add:react": "yarn add react@16 react-dom@16 && yarn add --dev @babel/preset-react enzyme enzyme-adapter-react-16 && mkdirp src/js/react src/sass/react",
		"bolts-remove:react:keep-files": "yarn remove react react-dom @babel/preset-react enzyme enzyme-adapter-react-16",
		"bolts-remove:react": "yarn run bolts-remove:react:keep-files && rimraf src/js/react src/sass/react"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx}": ["yarn run fix-scripts", "yarn run test --findRelatedTests", "git add"],
		"*.scss": ["yarn run fix-styles", "git add"]
	},
	"author": "Pocketsize",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.2.0",
		"@babel/polyfill": "^7.0.0",
		"@babel/preset-env": "^7.2.0",
		"autoprefixer": "^9.4.2",
		"babel-core": "^7.0.0-0",
		"babel-jest": "^23.6.0",
		"babel-loader": "^8.0.4",
		"browser-sync": "^2.26.3",
		"browser-sync-webpack-plugin": "^2.2.2",
		"clean-webpack-plugin": "^1.0.0",
		"copy-webpack-plugin": "^4.6.0",
		"cross-env": "^5.2.0",
		"css-loader": "^2.0.0",
		"css-mqpacker": "^7.0.0",
		"cssnano": "^4.1.7",
		"detect-installed": "^2.0.4",
		"dotenv": "^6.2.0",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"husky": "^1.3.0",
		"imagemin-mozjpeg": "^8.0.0",
		"imagemin-webpack-plugin": "^2.3.0",
		"jest": "^23.6.0",
		"lint-staged": "^8.1.0",
		"mini-css-extract-plugin": "^0.5.0",
		"mkdirp": "^0.5.1",
		"node-sass": "^4.11.0",
		"postcss-loader": "^3.0.0",
		"prettier": "1.15.3",
		"prettier-eslint": "^8.8.2",
		"prettier-eslint-cli": "^4.7.1",
		"prettier-stylelint": "^0.4.2",
		"rimraf": "^2.6.2",
		"sass-loader": "^7.1.0",
		"webpack": "^4.27.1",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.10"
	},
	"dependencies": {
		"bolts": "git+https://7d0d13d3a75878b9b6ca1185ed2d388221ce8ea4:x-oauth-basic@github.com/pocketsize/bolts-es6-dev.git"
	}
}
